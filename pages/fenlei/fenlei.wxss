.search{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color:whitesmoke;
  margin-top: 5rpx;
}
input{
   width: 85%;
  height: 70rpx;
  font-size: 27rpx;
  background: #ffff;
  border-radius: 20rpx;
  padding-left: 30rpx;
  border:1rpx solid whitesmoke;
  text-align: center;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.search-img{
  width: 55rpx;
  height: 55rpx;
  position: absolute;
  left:50%;
  margin-left: -62rpx;
  padding-top: 5rpx;
}

/* 分类左边 */
.categroy-left{
  display: flex;
  flex-direction: column;
  width:25%;
  height: 100%;
  color: #939393;
}
.categroy-left .left-item{
  height: 100rpx;
  text-align: center;
  background: #f7f7f7;
  line-height: 100rpx;
  font-size: 14px;
}
.left-item.active{
  background: #fff;
  color: red;
}
/* 分类右边 */
.categroy-right{
  position: absolute;
  top: 100rpx;
  right: 0;
  width: 75%;
  padding: 10px;
  box-sizing: border-box;
  background: #fff;
}
.right-items{
  float: left;
  height: 240rpx;
  text-align: center;
  width: 33.33%;
}
.right-items image{
  margin-top: 30rpx;
  width: 120rpx;
  height: 120rpx;
}
.right-items text{
  display: block;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: black;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.nodata{
  color: black;
  font-size: 28rpx;
  text-align: center;
}