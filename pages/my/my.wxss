  align-items: center;
}
.people3-list1{
  margin-bottom: 10rpx;
}
.people3-list1 image{
  width:75rpx;
  height: 75rpx;
}
.people4{
  margin: 0 30rpx;
}
.people4-list{
  border-bottom: 1px solid #E2E2E2;
  height: 110rpx;
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.people4-list view:last-child{
  position: absolute;
  right:0;
}
.people4-list text{
  margin-left: 25rpx;
