}
.kongge{
  height: 26rpx;
  width: 100%;
  background: #EFEFF4;
}
.people31{
  padding: 25rpx 0rpx 30rpx 20rpx;
  font-size:38rpx;
  border-bottom: 1.5px solid #666;
}
.people32{
  display: flex;
  flex-direction: row;
}
.people3-list{
  width: 20%;
  height: 180rpx;
