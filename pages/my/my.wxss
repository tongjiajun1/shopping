/* 获取用户授权 */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f0145a;   
  width: 100%; 
  height: 340rpx;

}
.userbutton{
  margin-top: 120rpx;
  font-size: 28rpx;
}
.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin-top: 80rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff;

}



